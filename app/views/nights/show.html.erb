<h1><%= @night.name %></h1>

<% if @night.description.present? %>
  <p><%= @night.description %></p>
<% end %>

<h2>Who's coming?</h2>
  <% @night.users.each do |u| %>
    <p><%= u.first_name %> <%= u.last_name %></p>
  <% end %>

<h2>Where are we going?</h2>

<!-- Shows all the venues as cards -->
<div class="row row-cols-1 row-cols-md-3">
  <% @venues.each do |venue| %>
    <div class="col-md-4">
      <div class="card h-100">
        <%= image_tag venue.image, :class => 'card-img-top', :width => 300 if venue.image.present? %>
        <div class="card-body hvr-grow">
          <h5 class="card-title"> <%= link_to venue.name, venue_path(venue) %></h5>
          <p class="card-text"> <%= venue.type %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>

<br>

<div class="controls">
  <%= link_to "Edit Your Night Out", edit_night_path(@night) %>
  <br>
  <br>
  <%= button_to "Delete Your Night Out", night_path, :method => 'delete', :data => {:confirm => 'Are you sure you want to delete your night out?'}, :class => "btn btn-dark"  %>
</div>
